<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xumaodun.a_fastdeveop.refresh.RefreshActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MaterialRefreshLayout"
        android:id="@+id/MaterialRefresh"
        android:onClick="MaterialRefresh"
        android:textSize="@dimen/space_25"
        android:textColor="@color/text_color_blue"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/activity_main_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="pullToRefreshLayout"
        android:id="@+id/pullToRefresh"
        android:onClick="pullToRefresh"
        android:textSize="@dimen/space_25"
        android:textColor="@color/text_color_blue"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/activity_main_toolbar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SwipeToLoadLayout"
        android:id="@+id/SwipeToLoadLayout"
        android:onClick="SwipeToLoadLayout"
        android:textSize="@dimen/space_25"
        android:textColor="@color/text_color_blue"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/pullToRefresh"
        android:layout_alignStart="@+id/pullToRefresh" />

</RelativeLayout>
